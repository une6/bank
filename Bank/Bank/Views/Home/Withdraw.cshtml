@model Bank.Models.Transaction

@{
    ViewData["Title"] = "Withdraw";
}

<h2>Withdraw</h2>

<table class="table">
    <tr>
        <td>LoginName:</td>
        <td>@ViewData["LoginName"]</td>
    </tr>

    <tr>
        <td>AccountNumber:</td>
        <td>@ViewData["AccountNumber"]</td>
    </tr>

    <tr>
        <td>Balance:</td>
        <td>@ViewData["Balance"]</td>
    </tr>

</table>

<hr />
<div class="row">
    <div class="col-md-4">
        @if (ViewData["Message"] != null)
        {
            <p class="alert alert-danger">@ViewData["Message"]</p>
        }

        @if (ViewData["SuccessMessage"] != null)
        {
            <p class="info alert-success">
                @ViewData["SuccessMessage"]
            </p>
        }
        <form asp-action="Withdraw">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Withdraw" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
